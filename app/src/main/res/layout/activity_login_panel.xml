<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginPanel">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Welcome to Cuetify!"
            android:textAlignment="center"
            android:textColor="#B31AB3"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Login as"
            android:textAlignment="center"
            android:textColor="#4CAF50"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:layout_marginTop="70dp"
            android:id="@+id/loginPanelFaculty"
            android:text="@string/faculty"
            android:layout_width="257dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:background="#00B8D4" />

        <Button
            android:id="@+id/loginPanelStudent"
            android:text="@string/student"
            android:layout_width="257dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:background="#FFAB00" />

        <Button
            android:id="@+id/loginPanelCr"
            android:text="@string/cr"
            android:layout_width="257dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:background="#DBC6E7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="73sp"
                android:layout_marginTop="50dp"
                android:text="Don't Have Account?"
                android:textColor="#B31AB3"
                android:textStyle="bold" />

            <Button
                android:id="@+id/signUpButton"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_marginTop="50dp"
                android:background="#00BCD4"
                android:text="Sign up" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>